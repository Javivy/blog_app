<h1>Details of a given Post</h1>
<div style="border: 1px solid #000; margin: 1rem; padding: 8px 1rem;">
  <div
    style="
      display: flex;
      justify-content: space-between;
      align-items: center;
    "
  >
    <h2>Post by username: <%= @post.author.name %></h2>
    <div style="display: flex; gap: 1rem">
      <p>Comments: <%= @post.comments_counter %></p>
      <p>Likes: <%= @post.likes_counter %></p>
    </div>
  </div>
  <p>
    <%= @post.text %>
  </p>
  <div style="border: 1px solid #000; display: flex; flex-direction: column; gap: 1rem;">
    <% if @comments.empty? %>
      <p> There are no comments </p>
    <% else %>
      <%  @comments.each do |comment|%>
        <div>
          <p>Username: <%= comment.user.name %></p>
          <p> <%= comment.text %></p>
        </div>
      <%  end%>
    <% end %>
    <% if @current_user && @current_user.liked?(@post) %>
      <%= link_to "Unlike", unlike_user_post_path(@post), method: :delete %>
    <% else %>
      <%= link_to "Like", like_user_post_path(@current_user, @post), method: :post %>
    <% end %>
    <div>
      <a href="<%= new_user_post_comment_path(@current_user, @post) %>">Create a new comment</a>
    </div>
  </div>
</div>
